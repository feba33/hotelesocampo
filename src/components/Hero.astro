---
import { Image } from "astro:assets";
import espanolImg from "../assets/pictures/espanol1.jpg";
---

<section>
  <article class="grid relative">
    <Image
      class="col-start-1 row-start-1 w-full absolute inset-0 h-full max-h-full object-cover"
      src={espanolImg}
      alt=""
    />
    <div
      class="col-start-1 row-start-1 flex flex-col w-full gap-16 py-16 px-auto z-10 bg-radial from-black/50 to-black/75"
    >
      <div>
        <p
          class="text-white text-4xl md:text-6xl font-medium tracking-wide leading-relaxed max-w-[700px]"
        >
          El lugar perfecto para <span class="highlight">descansar</span>
          y <span class="highlight">disfrutar</span>
          de
      </p>
        <p class="text-rotator">
          <span>Tampico</span>
          <span>Ciudad Madero</span>
          <span>Altamira</span>
          <span>tu tranquilidad</span>
        </p>
      </div>

      <div class="flex gap-2">
        <a href="http://wa.me/5215625165078" target="_blank" rel="noopener noreferrer" class="btn-primary text-xl">Reservar ahora</a>
        <a href="#precios" class="btn-secondary text-xl">Ver precios</a>
      </div>
    </div>
  </article>
</section>

<style>
  @reference '@styles/global.css';

  .highlight {
    /* @apply bg-clip-text bg-linear-to-t from-primary to-primary-inv text-transparent; */
    /* @apply text-primary */
    @apply text-primary-inv;
  }

  .text-rotator {
    position: relative;
    overflow: hidden;
    @apply text-white h-[2.25rem] text-4xl md:h-[3.75rem] md:text-6xl font-medium tracking-wide mt-[1rem] md:mt-[1.625rem]; /* 1.625rem is leading space */
  }

  .text-rotator span {
    position: absolute;
    opacity: 0;
    animation: rotateText 12s linear infinite;
  }

  .text-rotator span:nth-child(1) {
    animation-delay: 0s;
  }
  .text-rotator span:nth-child(2) {
    animation-delay: 3s;
  }
  .text-rotator span:nth-child(3) {
    animation-delay: 6s;
  }
  .text-rotator span:nth-child(4) {
    animation-delay: 9s;
  }

  @keyframes rotateText {
    0% {
      opacity: 0;
      transform: translateY(100%);
    }
    5% {
      opacity: 1;
      transform: translateY(0);
    }
    25% {
      opacity: 1;
      transform: translateY(0);
    }
    30% {
      opacity: 0;
      transform: translateY(-100%);
    }
    100% {
      opacity: 0;
    }
  }
</style>
